task :default => :calcular0

desc 'Calcular radio cuando el perimetro es 0'
task :calcular0 do
  sh "ruby bin/calcular_radio.rb 0"
end

desc 'Calcular radio cuando el perimetro es 10'
task :calcular10 do
  sh "ruby bin/calcular_radio.rb 10"
end

desc 'Realizar los test de la clase'
task :test do
  sh "ruby test/tc_circunferencia.rb"
end